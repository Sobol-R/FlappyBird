<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.flappybird.MainActivity">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/bg"
            android:background="@color/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/banana"
            android:layout_centerInParent="true"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/rogue_0"/>

        <RelativeLayout
            android:id="@+id/menu"
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/start_end_Window"
            android:text="start"
            android:textSize="27dp">

            <TextView
                android:id="@+id/start"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#A73C4E"
                android:gravity="center"
                android:padding="5dp"
                android:text="start"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/score"
                android:visibility="visible"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/start"
                android:background="#A73C4E"
                android:gravity="center"
                android:padding="5dp"
                android:text="score :"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                tools:text="score: 99999" />

            <TextView
                android:id="@+id/record"
                android:visibility="visible"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/score"
                android:background="#A73C4E"
                android:gravity="center"
                android:padding="5dp"
                android:text="record :"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                tools:text="score: 99999" />
        </RelativeLayout>
        <View
            android:visibility="gone"
            android:id="@+id/obstacle"
            android:background="@color/start_end_Window"
            android:layout_centerInParent="true"
            android:translationX="500dp"
            android:layout_width="128dp"
            android:layout_height="60dp" />
        <View
            android:id="@+id/obstacle2"
            android:background="@color/start_end_Window"
            android:layout_centerInParent="true"
            android:translationX="500dp"
            android:layout_width="128dp"
            android:layout_height="60dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>